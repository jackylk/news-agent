.container {
  min-height: 100vh;
  background-color: #fff;
}

.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.retry-btn {
  margin-top: 40rpx;
  padding: 20rpx 40rpx;
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
}

.news-detail {
  padding: 40rpx;
}

.news-header {
  margin-bottom: 40rpx;
}

.news-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 24rpx;
}

.news-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #e0e0e0;
}

.news-source {
  font-size: 28rpx;
  color: #007aff;
}

.news-date {
  font-size: 28rpx;
  color: #999;
}

.news-image {
  width: 100%;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.news-content {
  line-height: 1.8;
}

.news-summary {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
  display: block;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background-color: #f5f5f5;
  border-left: 4rpx solid #007aff;
  border-radius: 8rpx;
}

.news-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.news-footer {
  margin-top: 60rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #e0e0e0;
}

.source-btn {
  width: 100%;
  padding: 24rpx;
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
}

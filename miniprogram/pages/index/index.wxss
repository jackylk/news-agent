.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading, .error, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.retry-btn {
  margin-top: 40rpx;
  padding: 20rpx 40rpx;
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
}

.news-list {
  padding: 20rpx;
}

.date-section {
  margin-bottom: 40rpx;
}

.date-header {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #e0e0e0;
  margin-bottom: 20rpx;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.news-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.news-item {
  display: flex;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 24rpx;
  gap: 20rpx;
}

.news-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.news-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.news-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.news-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.news-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.news-source {
  font-size: 24rpx;
  color: #999;
}

.news-time {
  font-size: 24rpx;
  color: #999;
}
